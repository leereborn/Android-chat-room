<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carleton.chattime.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="407dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_create_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_create_room" />

        <Button
            android:id="@+id/button_view_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_view_room_list" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
